{
  "name": "reatom",
  "private": true,
  "description": "Expressive and deterministic state manager",
  "scripts": {
    "prettify": "prettier --write **/*.{js,ts,md} !**/babel-plugin/test/**",
    "prettify:watch": "onchange **/*.{js,ts,md} !**/babel-plugin/test/** -- prettier --write {{changed}}"
  },
  "workspaces": [
    "packages/core",
    "packages/react"
  ],
  "author": "artalar",
  "license": "MIT",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/artalar/reatom.git"
  },
  "bugs": {
    "url": "https://github.com/artalar/reatom/issues"
  },
  "homepage": "https://github.com/artalar/reatom/tree/v2",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/config-lerna-scopes": "^13.1.0",
    "@jsdevtools/npm-publish": "^1.4.3",
    "@size-limit/preset-small-lib": "^4.11.0",
    "@types/jest": "^26.0.23",
    "cross-env": "^7.0.3",
    "jest": "^27.0.1",
    "microbundle": "^0.13.1",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.6.1",
    "size-limit": "^4.11.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2",
    "zx": "^4.1.1"
  },
  "lint-staged": {
    "**/*.{js,ts,md}": "prettier --write"
  }, 
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged && commitlint"
  },
  "keywords": [
    "state",
    "store",
    "state-manager",
    "state manager",
    "reactive",
    "reactivity",
    "flux",
    "atom",
    "reatom",
    "@reatom"
  ]
}

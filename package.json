{
  "name": "reatom",
  "private": true,
  "description": "Expressive and deterministic state manager",
  "scripts": {
    "actualize-issue-templates": "bun tools/actualize-issue-templates.ts",
    "build": "turbo run build",
    "postinstall": "turbo run build --filter=core --filter=framework --filter=testing",
    "package-generator": "bun tools/new-package.ts",
    "prepare": "husky install",
    "prettify": "prettier --write **/*.{js,ts,md}",
    "prettify:watch": "onchange **/*.{js,ts,md} -- prettier --write {{changed}}",
    "release": "bun tools/publish.ts",
    "reset": "./reset.sh",
    "test": "turbo run build --filter=testing && turbo run test",
    "update": "npx npm-check-updates -u"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": "artalar",
  "license": "MIT",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/artalar/reatom.git"
  },
  "engines": {
    "npm": ">=8.0.0"
  },
  "bugs": {
    "url": "https://github.com/artalar/reatom/issues"
  },
  "homepage": "https://github.com/artalar/reatom/tree/v3",
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/bun": "^1.1.0",
    "@types/prettier": "^3.0.0",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@types/use-sync-external-store": "^0.0.6",
    "@vitejs/plugin-react": "^4.2.1",
    "bun": "^1.1.4",
    "bun-plugin-dts": "^0.2.3",
    "husky": "^9.0.11",
    "linkedom": "^0.16.11",
    "microbundle": "^0.15.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "turbo": "^1.13.0",
    "typescript": "^5.4.3",
    "use-sync-external-store": "^1.2.0",
    "uvu": "^0.5.6",
    "vite": "^5.2.6",
    "zx": "^7.2.3"
  },
  "keywords": [
    "state",
    "store",
    "state-manager",
    "state manager",
    "reactive",
    "reactivity",
    "flux",
    "atom",
    "reatom",
    "@reatom"
  ]
}

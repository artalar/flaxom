---
import Layout from './Layout.astro'

const { frontmatter = {} as Record<string, string> } = Astro.props
---

<Layout frontmatter={frontmatter}>
  <slot />
</Layout>
<style is:global>
  #key-features + ul {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 1rem;
    padding: 0;
  }
  #key-features + ul li {
    flex: 30%;
    margin: 0;
    padding: 0.5rem;
    text-align: center;
    font-size: 1.1em;
    min-width: 10rem;
    padding: 1rem 0.5rem;
  }
</style>

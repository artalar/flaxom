<script>
  declare global {
    interface Window {
      ADD_COPY_BUTTONS(): void
    }
  }
  window.ADD_COPY_BUTTONS = () =>
    document.querySelectorAll('h1,h2,h3,h4,h5,h6').forEach((el) => {
      const h = el as HTMLHeadingElement
      const copyButton = document.createElement('button')

      copyButton.classList.add('copy')

      copyButton.innerText = '#'

      copyButton.ariaLabel =
        copyButton.title = `copy anchor to "${h.innerText}"`

      copyButton.onclick = () => {
        location.hash = `#${h.id}`
        navigator.clipboard.writeText(location.href)
      }

      h.appendChild(copyButton)
      h.classList.add('with-copy')
    })
  window.ADD_COPY_BUTTONS()
</script>
<style is:global>
  button.copy:before {
    content: unset;
  }
  button.copy {
    display: none;
    border: none;
    background: unset;
    margin: 0;
    padding: 0;
    min-width: unset;
    margin-left: 1rem;
    font-size: 1.2rem;
    font-weight: 500;
    height: 1rem;
    cursor: pointer;
  }

  h1 button.copy,
  h2 button.copy {
    font-size: 1.3rem;
  }

  .with-copy {
    position: relative;
  }

  .with-copy:hover button.copy {
    display: inline;
  }
</style>
